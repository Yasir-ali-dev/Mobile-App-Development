<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".Networking"
            android:exported="true"
            android:label="@string/title_activity_networking"
            android:theme="@style/Theme.MyApplication" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorkManagerActivity"
            android:exported="true"
            android:label="@string/title_activity_work_manager"
            android:theme="@style/Theme.MyApplication">

        </activity>
        <activity
            android:name=".IntentActivity"
            android:exported="true"
            android:label="@string/title_activity_intent"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".ui.theme.ui.theme.ui.theme.Activity4"
            android:exported="true"
            android:label="@string/title_activity_4"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".ui.theme.ui.theme.Activity3"
            android:exported="true"
            android:label="@string/title_activity_3"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".ui.theme.Activity2"
            android:exported="true"
            android:label="@string/title_activity_2"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication" />
    </application>

</manifest>